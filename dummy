import json

def convert_json_to_jsonl(input_json_file, output_jsonl_file):
    """
    Convert a JSON file (array of objects) to JSONL format.
    
    :param input_json_file: Path to the input JSON file.
    :param output_jsonl_file: Path to the output JSONL file.
    """
    # Read the input JSON file
    with open(input_json_file, 'r') as json_file:
        data = json.load(json_file)  # Load JSON array
        
    # Write to JSONL file
    with open(output_jsonl_file, 'w') as jsonl_file:
        for item in data:
            jsonl_file.write(json.dumps(item) + '\n')  # Write each JSON object on a new line

# Main execution
if __name__ == "__main__":
    input_file = "/path/to/your/input.json"   # Replace with the input JSON file path
    output_file = "/path/to/your/output.jsonl"  # Replace with the output JSONL file path
    
    convert_json_to_jsonl(input_file, output_file)
    print(f"Conversion completed: {output_file}")
